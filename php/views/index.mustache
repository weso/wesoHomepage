						<label for="correo">{{#labels}}{{{email}}}{{/labels}}</label>
						<input type="text" name="email" placeholder="{{#labels}}{{{whatsemail}}}{{/labels}}" />
						<label for="asunto">{{#labels}}{{{subject}}}{{/labels}}</label>
						<input type="text" name="subject" placeholder="{{#labels}}{{{wanttoask}}}{{/labels}}" />
						<label for="cuerpo">{{#labels}}{{{description}}}{{/labels}}</label>
						<textarea name="description"></textarea>

						<!-- Captcha -->
						<script type="text/javascript">
 							var RecaptchaOptions = {
    							theme : 'white'
 							};
 						</script>
						  <script type="text/javascript"
							 src="http://www.google.com/recaptcha/api/challenge?k=6Lfr9u4SAAAAAN0gsx9BZpvZ7YZW6ay_oQ9mz80X">
						  </script>
						  <noscript>
							 <iframe src="http://www.google.com/recaptcha/api/noscript?k=6Lfr9u4SAAAAAN0gsx9BZpvZ7YZW6ay_oQ9mz80X"
								 height="300" width="500" frameborder="0"></iframe><br>
							 <textarea name="recaptcha_challenge_field" rows="3" cols="40">
							 </textarea>
							 <input type="hidden" name="recaptcha_response_field"
								 value="manual_challenge">
						  </noscript>

						<input id="contact-form-button" type="submit" value="{{#labels}}{{{send}}}{{/labels}}" />
					</form>
				</div>
			</div>
			<div class="created-by">
				<img class="html5-css3" alt="{{#labels}}{{{createdin}}}{{/labels}}" src="static/img/HTML5-CSS3.png" />
				{{#labels}}{{{createdby}}}{{/labels}} <a href="http://juancastro.es" title="{{#labels}}{{{goto}}}{{/labels}} juancastro.es">
								<img class="created" alt="{{#labels}}{{{createdby}}}{{/labels}} JUAN CASTRO" src="static/img/juancastro.png" />
												</a>
			</div>
		</div>
	</footer>
	<script src="static/js/jquery.js"></script>
	<script src="static/js/scrolledIntoView.js"></script>
	<script>
		$('.content h3, .panel-home #home')
			  .scrolledIntoView()
			  .on('scrolledin', function () {
					  console.log( 'in '+$(this).text() );
					  $("nav.navigation a").removeClass("selected");
					  $("nav.navigation a." + $(this).attr('class')).addClass("selected");
			  })
			  .on('scrolledout', function () {
					  console.log( 'out '+$(this).text() ); });

		document.getElementById("contact-form").action = "";

		document.getElementById("contact-form-button").onclick = function() {
			var button = this;

			button.disabled = true;
			button.value = "{{#labels}}{{{sending}}}{{/labels}}";
			button.className = "sending";

			function onError(captcha) {
				if (captcha)
					button.value = "{{#labels}}{{{captcha}}}{{/labels}}";
				else
					button.value = "{{#labels}}{{{notsent}}}{{/labels}}";
				button.className = "not-sent";
				button.disabled = false;
			}

			$.ajax({
				type: "POST",
				url: "php/send.php",
				data: $("#contact-form").serialize(),
				success: function(msg) {
					if (msg != "OK") {
						onError(msg == 'captcha');
					}
					else {
						button.value = "{{#labels}}{{{sent}}}{{/labels}}";
						button.className = "sent";
						button.disabled = false;
						$('#contact-form')[0].reset();

						setTimeout(function() {
							button.value = "{{#labels}}{{{send}}}{{/labels}}";
						}, 2000);
					}
				},
				error: function (xhr, ajaxOptions, thrownError) {
					onError();
      			}
			});

			return false;
	 	}
	</script>
