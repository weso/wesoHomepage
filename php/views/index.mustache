			<div id="text" class="columns">
				<div class="column1">
					<p>
						{{#labels}}{{{introduction}}}{{/labels}}
					</p>
				</div>

				<div class="column2">
					<table class="twitter pages">
						{{#tweets}}
							<tr>
								<td class="user">
									<a href="http://twitter.com/{{#user}}{{account}}{{/user}}">
										<img class="user" alt="" src="{{#user}}{{image}}{{/user}}" />
									</a>
								</td>
								<td class="news">
									<p>
										<a href="{{#user}}{{account}}{{/user}}">
											<strong>{{#user}}{{name}}{{/user}}</strong>
										</a>
										<a href="{{#user}}{{account}}{{/user}}">
											@{{#user}}{{account}}{{/user}}
										</a>
									</p>
									<p class="text">
										{{{text}}}
									</p>
									<p class="date">
										{{date}}
